<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aboutus">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="314dp"
        app:cardBackgroundColor="#FFFF"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/jitendra"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="16dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginRight="25dp"
            android:text="  Web Devloper "
            android:textSize="18dp"
            android:textColor="@color/teal_200"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:textSize="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="15dp"
            android:text="Android devloper"
            android:textColor="@color/wallet_holo_blue_light" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv1"
        android:layout_alignBottom="@+id/cv1"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="-472dp"
        app:cardBackgroundColor="#B50884"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        app:cardUseCompatPadding="true">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
            android:textAlignment="center"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="10dp"
            android:justificationMode="inter_word"
            android:text="@string/myintro"
            android:textColor="@color/white"
            android:textSize="18dp"

            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="300dp" />
    <TextView
        android:id="@+id/portfolio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:textColor="@color/transparentblue"
        android:textSize="16sp"
        android:textStyle="italic|bold"
        android:text="For more information, Please visit my portfolio(click here)."/>

</LinearLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>


</RelativeLayout>